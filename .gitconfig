[credential]
	helper = osxkeychain

[user]
	name = Pete Correia
	email = pete@petecorreia.com

[core]
	editor = subl -n -w
	excludesfile = /Users/petecorreia/.gitignore_global
	autocrlf = input
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	f = "!git ls-files | grep -i"
	la = "!git config -l | grep alias | cut -c 7-"
	diff = diff --word-diff
	url =! bash -c 'git config --get remote.origin.url | sed -E "s/.+:\\(.+\\)\\.git$/https:\\\\/\\\\/github\\\\.com\\\\/\\\\1/g"'
	urlb =! bash -c 'git url | sed -E "s/\\(.+\\)/\\\\1\\\\/tree\\\\/`git rev-parse --abbrev-ref HEAD`/"'
	hub =! bash -c 'git url | xargs open'
	hubb =! bash -c 'git urlb | xargs open'
	pr =! bash -c 'git url | sed -E "s/\\(.+\\)/\\\\1\\\\/compare\\\\/`git rev-parse --abbrev-ref HEAD`?expand=1/" | xargs open'
	cleanup =! bash -c 'git branch --merged master | grep -v \"\\* master\" | xargs -n 1 git branch -d'
	cleanup-develop =! bash -c 'git branch --merged develop | grep -v \"\\* develop\" | xargs -n 1 git branch -d'
[push]
	default = simple
